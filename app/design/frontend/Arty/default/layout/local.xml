    <default translate="label" module="page">
        <reference name="head">
            <!-- Adding Javascripts -->
            <action method="addJs">
                <type>skin_js</type>
                <name>js/login-box.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
