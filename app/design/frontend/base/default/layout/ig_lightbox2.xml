<layout version="0.1.0">
	<catalog_product_view>
		<reference name="head">
			<action method="addItem"><type>skin_js</type><name>ig_lightbox2/js/jquery-1.6.2.min.js</name></action>
		</reference>
		<reference name="product.info">
            <block type="ig_lightbox2/catalog_product_view_media" name="product.info.media" as="media" template="ig_lightbox2/catalog/product/view/media.phtml">
				<block type="ig_lightbox2/catalog_product_view_media_gallery_fancybox" name="gallery.fancybox" as="gallery-fancybox" template="ig_lightbox2/catalog/product/view/media/gallery/fancybox.phtml" />
				<block type="ig_lightbox2/catalog_product_view_media_gallery_lightbox" name="gallery.lightbox" as="gallery-lightbox" template="ig_lightbox2/catalog/product/view/media/gallery/lightbox.phtml" />
				<block type="ig_lightbox2/catalog_product_view_media_gallery_prettyphoto" name="gallery.prettyphoto" as="gallery-prettyphoto" template="ig_lightbox2/catalog/product/view/media/gallery/prettyphoto.phtml" />
				<block type="ig_lightbox2/catalog_product_view_media_gallery_colorbox" name="gallery.colorbox" as="gallery-colorbox" template="ig_lightbox2/catalog/product/view/media/gallery/colorbox.phtml" />
			</block>
		</reference>
	</catalog_product_view>
	
	<review_product_list>

    </review_product_list>
</layout>