        </reference>
    </adminhtml_packpintracks_dashboard>
    <adminhtml_system_config_edit>
        <reference name="head">
            <action method="addCss">
                <name>pptrack/css/pptrack.css</name>
            </action>
        </reference>
    </adminhtml_system_config_edit>
</layout>